<div class="login-page">
  <div class="registration-container container bg-white p-5 shadow my-5">
    <h2 class="text-center">Membership Application form</h2>
    <p class="text-center my-0">Location Tracker</p>
    <p class="text-center my-0">Brgy. Quibaol West, Highway, Lingayen Pangasinan</p>
    <p class="text-center my-0">CDA Registration No. 9520-1010000000045365</p>
    <p class="text-center my-0">TIN N0. 737-879-958-000</p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :image,
                  autofocus: true,
                  required: true %>
        <%= f.input :id_image,
                  autofocus: true,
                  required: true %>
        <%= f.input :first_name,
                  autofocus: true,
                  required: true %>
        <%= f.input :last_name,
                  autofocus: true,
                  required: true %>
        <%= f.input :middle_name,
                  autofocus: true,
                  required: true %>
        <%= f.input :tin,
                   label: "TIN",
                  autofocus: true,
                  required: true %>
        <%= f.input :sss,
                   label: "SSS",
                  autofocus: true,
                  required: true %>
        <%= f.input :philhealth,
                   label: "PHILHEALTH:",
                  autofocus: true,
                  required: true %>
        <%= f.input :pag_ibig,
                   label: "PAG-IBIG:",
                  autofocus: true,
                  required: true %>
        <%= f.input :birthday, html5: true,
                  autofocus: true,
                  required: true %>
        <%= f.input :gender,
                  as: :select,
                  include_blank: false,
                  collection: User.genders.keys,
                  autofocus: true %>
        <%= f.input :address,
                  autofocus: true,
                  required: true %>
        <%= f.input :contact_number,
                  autofocus: true,
                  required: true %>
        <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "SUBMIT", class: 'btn btn-primary py-2' %>
      </div>
    <% end %>
  </div>
</div>
