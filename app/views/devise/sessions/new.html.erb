<div class="container-fluid login-page position-relative pt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-3 d-none d-md-block py-4 px-2 px-md-5">
        <div class="heading-container">
        </div>
      </div>
      <br>
      <div class="col-md-6 pt-2 pb-5 px-2 px-md-5" >
        <br>
        <br>
        <br>
        <div class="login-container px-4 py-5 bg-white rounded shadow" style="background-color: rgba(255,255,255,0.8) !important">
          <hr/>
          <% if alert.present? %>
            <p class="text-danger"><%= alert %></p>
          <% end %>
          <% if notice.present? %>
            <p class="text-success"><%= notice %></p>
          <% end %>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          placeholder: "Please enter your email",
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          placeholder: "Please enter your password",
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: 'btn btn-primary rounded-pill px-5 d-block mx-auto' %>
            </div>
            <p class="text-center mt-3">or</p>
            <a class="btn btn-outline-primary rounded-pill px-5 d-block mx-auto" href="/users/sign_up">Register</a>
          <% end %>
        </div>
      </div>
    </div>
    <div class="login-footer">
      <p class="text-center text-white">@Location Tracker</p>
    </div>
  </div>
</div>
